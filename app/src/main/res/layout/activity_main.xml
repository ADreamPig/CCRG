<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_above="@id/btn_motor_import_vehicle">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center_horizontal"/>
    </ScrollView>

    <Button
        android:id="@+id/btn_motor_import_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_two_car_import"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="机动车发票导入识别" />

    <Button
        android:id="@+id/btn_two_car_import"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/btn_motor_scan_vehicle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="二手车发票导入识别" />

    <Button
        android:id="@+id/btn_motor_scan_vehicle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/btn_two_car_scan"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="机动车发票扫描识别" />

    <Button
        android:id="@+id/btn_two_car_scan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="二手车发票扫描识别" />


</RelativeLayout>